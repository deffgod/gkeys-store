{
  "name": "gkeys-store-backend",
  "version": "1.0.0",
  "description": "Backend API for GKEYS Store",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx tsx watch src/index.ts",
    "build": "npx tsc --noEmitOnError false --skipLibCheck",
    "build:full": "prisma generate && (npx tsc --noEmitOnError false --skipLibCheck || exit 0)",
    "build:deploy": "prisma generate && (prisma migrate deploy || echo 'Migration skipped') && (npx tsc --noEmitOnError false --skipLibCheck || exit 0)",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "npx tsx prisma/seed.ts",
    "db:check": "npx tsx scripts/check-db.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:endpoints": "npx tsx scripts/test-endpoints.ts",
    "test:g2a": "npx tsx scripts/test-g2a.ts",
    "g2a:sync": "npx tsx scripts/sync-all-g2a-games.ts",
    "g2a:sync:dry": "npx tsx scripts/sync-all-g2a-games.ts --dry-run",
    "g2a:sync:prices": "npx tsx scripts/sync-g2a-prices.ts",
    "g2a:sync:stock": "npx tsx scripts/sync-g2a-stock.ts",
    "g2a:sync:all": "npm run g2a:sync && npm run g2a:sync:prices && npm run g2a:sync:stock",
    "db:update": "prisma migrate dev",
    "db:update:deploy": "prisma migrate deploy",
    "db:backup": "npx tsx scripts/backup-db-prisma.ts",
    "db:restore": "npx tsx scripts/restore-from-backup.ts",
    "orders:sync": "npx tsx scripts/sync-orders.ts",
    "lint": "eslint src prisma scripts tests --ext .ts --ignore-pattern 'dist' --ignore-pattern 'node_modules'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/pdfkit": "^0.17.4",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.25.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.17.2",
    "redis": "^4.7.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.19.3",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vercel/node": "^5.5.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.1",
    "prettier": "^3.4.2",
    "prisma": "^5.17.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "postinstall": "prisma generate"
}
