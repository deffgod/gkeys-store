// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum TransactionType {
  TOP_UP
  PURCHASE
  REFUND
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  nickname      String?  @default("Newbie Guy")
  firstName     String?
  lastName      String?
  avatar        String?
  balance       Decimal  @default(0) @db.Decimal(10, 2)
  role          Role     @default(USER)
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  orders        Order[]
  transactions  Transaction[]
  wishlist      Wishlist[]
  cart          CartItem[]
  loginHistory  LoginHistory[]

  @@index([email])
  @@map("users")
}

model Game {
  id                String   @id @default(uuid())
  title             String
  slug              String   @unique
  description       String   @db.Text
  shortDescription  String?
  price             Decimal  @db.Decimal(10, 2)
  originalPrice     Decimal? @db.Decimal(10, 2)
  discount          Int?     @default(0)
  currency          String   @default("EUR")
  image             String
  images            String[]
  inStock           Boolean  @default(true)
  g2aProductId      String?
  g2aStock          Boolean  @default(false)
  g2aLastSync       DateTime?
  releaseDate       DateTime
  metacriticScore   Int?
  userRating        Decimal? @db.Decimal(3, 2)
  ageRating         String?
  multiplayer       Boolean  @default(false)
  activationService String?
  region            String?
  publisher         String?
  isBestSeller      Boolean  @default(false)
  isNew             Boolean  @default(false)
  isPreorder        Boolean  @default(false)
  // Extended fields for advanced filters
  ratingCritic      Int?     @db.SmallInt  // 0-100, optional
  ratingUser        Int?     @db.SmallInt  // 0-100, optional
  languages         String[]                // Array of language codes (ISO 639-1)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  categories        GameCategory[]
  genres            GameGenre[]
  platforms         GamePlatform[]
  tags              GameTag[]
  keys              GameKey[]
  orderItems        OrderItem[]
  wishlist          Wishlist[]
  cart              CartItem[]

  @@index([slug])
  @@index([inStock])
  @@index([isPreorder])
  @@index([releaseDate])
  @@index([isBestSeller])
  @@index([isNew])
  @@index([price])
  @@index([g2aProductId])
  @@index([ratingCritic])
  @@index([ratingUser])
  @@index([languages])
  @@map("games")
}

model GameKey {
  id            String    @id @default(uuid())
  gameId        String
  key           String   @unique
  orderId       String?
  activated     Boolean   @default(false)
  activationDate DateTime?
  createdAt     DateTime  @default(now())

  game          Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  order         Order?    @relation(fields: [orderId], references: [id])

  @@index([gameId])
  @@index([orderId])
  @@map("game_keys")
}

model Order {
  id              String        @id @default(uuid())
  userId          String
  status          OrderStatus  @default(PENDING)
  subtotal        Decimal      @db.Decimal(10, 2)
  discount        Decimal      @default(0) @db.Decimal(10, 2)
  total           Decimal      @db.Decimal(10, 2)
  paymentMethod   String?
  paymentStatus   PaymentStatus?
  promoCode       String?
  externalOrderId String?       @unique // G2A order ID for webhook integration

  createdAt       DateTime      @default(now())
  completedAt     DateTime?

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           OrderItem[]
  keys            GameKey[]
  transaction     Transaction?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([externalOrderId])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  gameId    String
  quantity  Int     @default(1)
  price     Decimal @db.Decimal(10, 2)
  discount  Decimal @default(0) @db.Decimal(10, 2)

  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  game      Game    @relation(fields: [gameId], references: [id])

  @@index([orderId])
  @@index([gameId])
  @@map("order_items")
}

model Transaction {
  id              String          @id @default(uuid())
  userId          String
  orderId         String?         @unique
  type            TransactionType
  amount          Decimal         @db.Decimal(10, 2)
  currency        String          @default("EUR")
  method          String?
  status          PaymentStatus
  description     String?
  transactionHash String?         @unique
  gatewayResponse Json?

  createdAt       DateTime        @default(now())

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  order           Order?          @relation(fields: [orderId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([transactionHash])
  @@index([createdAt])
  @@map("transactions")
}

model PaymentMethod {
  id          String   @id @default(uuid())
  name        String
  type        String
  icon        String?
  available   Boolean  @default(true)
  order       Int      @default(0)
  config      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payment_methods")
}

model PaymentForm {
  id          String   @id @default(uuid())
  name        String
  fields      Json
  validation  Json?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payment_forms")
}

model Article {
  id          String    @id @default(uuid())
  slug        String    @unique
  title       String
  excerpt     String
  content     String    @db.Text
  coverImage  String
  category    String
  author      String
  published   Boolean   @default(false)
  publishedAt DateTime?
  readTime    Int?
  tags        String[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([category])
  @@index([published])
  @@map("articles")
}

model GameCategory {
  gameId     String
  categoryId String
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([gameId, categoryId])
  @@map("game_categories")
}

model GameGenre {
  gameId   String
  genreId  String
  game     Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  genre    Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@id([gameId, genreId])
  @@map("game_genres")
}

model GamePlatform {
  gameId     String
  platformId String
  game       Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  platform   Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@id([gameId, platformId])
  @@map("game_platforms")
}

model GameTag {
  gameId String
  tagId  String
  game   Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([gameId, tagId])
  @@map("game_tags")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  slug  String @unique
  games GameCategory[]

  @@map("categories")
}

model Genre {
  id    String @id @default(uuid())
  name  String @unique
  slug  String @unique
  games GameGenre[]

  @@map("genres")
}

model Platform {
  id    String @id @default(uuid())
  name  String @unique
  slug  String @unique
  games GamePlatform[]

  @@map("platforms")
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  slug  String @unique
  games GameTag[]

  @@map("tags")
}

model Wishlist {
  userId  String
  gameId  String
  addedAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game    Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@id([userId, gameId])
  @@index([userId])
  @@map("wishlist")
}

model CartItem {
  userId    String
  gameId    String
  quantity  Int      @default(1)
  addedAt   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@id([userId, gameId])
  @@index([userId])
  @@map("cart_items")
}

model PromoCode {
  id          String   @id @default(uuid())
  code        String   @unique
  discount    Decimal  @db.Decimal(5, 2)
  maxUses     Int?
  usedCount   Int      @default(0)
  validFrom   DateTime
  validUntil  DateTime
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([code])
  @@map("promo_codes")
}

model Session {
  id        String   @id @default(uuid())
  sessionId String   @unique
  data      Json     // Stores cart/wishlist data
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([expiresAt])
  @@map("sessions")
}

model FAQ {
  id        String   @id @default(uuid())
  category  String
  question  String
  answer    String   @db.Text
  order     Int      @default(0) // Display order
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([category, order])
  @@map("faqs")
}

model LoginHistory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String?
  userAgent String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([createdAt])
  @@map("login_history")
}

